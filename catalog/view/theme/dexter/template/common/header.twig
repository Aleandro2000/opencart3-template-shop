<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/theme/dexter/js/jquery.min.js" type="text/javascript"></script>
<link href="catalog/view/theme/dexter/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/theme/dexter/js/bootstrap.min.js" type="text/javascript"></script>
<link href="catalog/view/theme/dexter/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="catalog/view/theme/dexter/css/slick.css" rel="stylesheet">
<link href="catalog/view/theme/dexter/css/slick-theme.css" rel="stylesheet">
<script src="catalog/view/theme/dexter/js/slick.min.js" type="text/javascript"></script>
<link href="catalog/view/theme/dexter/css/nouislider.min.css" rel="stylesheet">
<script src="catalog/view/theme/dexter/js/nouislider.min.js" type="text/javascript"></script>
<script src="catalog/view/theme/dexter/js/jquery.zoom.min.js" type="text/javascript"></script>
<link href="catalog/view/theme/dexter/css/style.css" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Mulish:400,500,600,700" rel="stylesheet" type="text/css" />
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/theme/dexter/js/main.js" type="text/javascript"></script>
<script src="catalog/view/theme/dexter/js/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<header>
<div id="top-header">
	<div class="container">
		<ul class="header-links pull-left">
			<li><a href="#"><i class="fa fa-phone"></i>{{ telephone }}</a></li>
			<li><a href="#"><i class="fa fa-envelope-o"></i> {{ email }}</a></li>
		</ul>
		<ul class="header-links pull-right">
			<li>{{ currency }}</li>
			 {% if language %}
			<li>{{ language }}</li>
			{% endif %}
			<li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_account }}</span> <span class="caret"></span></a>
          <ul class="dropdown-menu account">
            {% if logged %}
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><a href="{{ download }}">{{ text_download }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a href="{{ register }}">{{ text_register }}</a></li>
            <li><a href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
        </li>
			 <li><a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a></li>
			<li><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span></a></li>
			<li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="fa fa-share"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a></li>
		</ul>
	</div>
</div>
<div id="header">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<div class="header-logo">
				{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
          <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}
				</div>
			</div>
			<div class="col-md-6">
				{{ search }}
			</div>
			<div class="col-md-3 clearfix">
				<div class="header-ctn">

				{{ cart }}
	
					<!-- Menu Toogle -->
					<div class="menu-toggle">
							<a href="#">
									<i class="fa fa-bars"></i>
										<span>Menu</span>
							</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
</header>
{{ menu }}
